<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.mybookstore">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_samed"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_samed"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".Activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.ShowCommentActivity" />
        <activity android:name=".Activities.SearchActivity" />
        <activity android:name=".Activities.ItemActivity" />
        <activity android:name=".Activities.ItemCatActivity" />
        <activity android:name=".Activities.BasketActivity" />
        <activity android:name=".Activities.ShowActivity" />
        <activity android:name=".Activities.CategoryActivity" />
        <activity android:name=".Activities.EditInformation" />
        <activity android:name=".Activities.ProfileActivity" />
        <activity
            android:name=".Activities.RegisterActivity"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name=".Activities.LoginActivity"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
    </application>

</manifest>