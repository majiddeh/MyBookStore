<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.mybookstore">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_samed"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_samed"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".Activities.ChangePassActivity"></activity>
        <activity android:name=".Activities.VerfyCodeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.LoginActivity"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name=".Activities.RegisterActivity"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity android:name=".Activities.FullProductActivity" />
        <activity android:name=".Activities.CatActivity_ViewPager" />
        <activity
            android:name=".Activities.ForgetPassActivity"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity android:name=".Activities.BannerActivity" />
        <activity android:name=".Activities.FavoriteActivity" />
        <activity android:name=".Activities.AboutActivity" />
        <activity android:name=".Activities.SendCommentActivity" />
        <activity android:name=".Activities.SplashActivity"></activity>
        <activity android:name=".Activities.ShowCommentActivity" />
        <activity android:name=".Activities.SearchActivity" />
        <activity android:name=".Activities.ItemActivity" />
        <activity android:name=".Activities.ItemCatActivity" />
        <activity android:name=".Activities.BasketActivity" />
        <activity android:name=".Activities.ShowActivity" />
        <activity android:name=".Activities.CategoryActivity" />
        <activity android:name=".Activities.EditInformation" />
        <activity android:name=".Activities.ProfileActivity" />
        <activity
            android:name=".Activities.RegisterActivityND"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name=".Activities.LoginActivityND"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>