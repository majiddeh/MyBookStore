<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_light_for_bg_activity"
    android:layoutDirection="rtl"
    tools:context=".Fragments.FragmentOrder">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/linear1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:id="@+id/img_first1"
            android:layout_width="35dp"
            android:layout_alignParentStart="true"
            android:layout_height="35dp"
            android:src="@drawable/tick" />


        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/txt_first"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_first1"
            android:textColor="#666565"
            android:text="    ______    "/>

        <RelativeLayout
            android:layout_width="35dp"
            android:id="@+id/img_second"
            android:layout_toEndOf="@+id/txt_first"
            android:layout_height="35dp">
            <ImageView
                android:id="@+id/img_first"
                android:layout_width="35dp"
                android:layout_alignParentStart="true"
                android:layout_height="35dp"
                android:src="@drawable/tick" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/txt_second"
            android:layout_toEndOf="@+id/img_second"
            android:layout_height="wrap_content"
            android:textColor="#666565"
            android:text="    ______    "/>

        <RelativeLayout
            android:layout_width="35dp"
            android:id="@+id/img_third"
            android:layout_toEndOf="@id/txt_second"
            android:layout_height="35dp">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/shape_circle_white"
                android:scaleType="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vazir_medium"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="۳"/>

        </RelativeLayout>

    </RelativeLayout>
        <LinearLayout
            android:id="@+id/linear2"
            android:layout_below="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".33"
                android:layout_height="wrap_content"
                android:textColor="#666565"
                android:layout_marginStart="48dp"
                android:textSize="11dp"
                android:fontFamily="@font/vazir_medium"
                android:text="ورود به باشگاه صامد"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".33"
                android:layout_height="wrap_content"
                android:textColor="#666565"
                android:textSize="11dp"
                android:fontFamily="@font/vazir_medium"
                android:layout_marginStart="24dp"
                android:text="شیوه ارسال"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".33"
                android:layout_height="wrap_content"
                android:textColor="#666565"
                android:textSize="11dp"
                android:fontFamily="@font/vazir_medium"
                android:text="پرداخت"/>


        </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:foreground="?attr/selectableItemBackground"
        android:id="@+id/card_fragment_order"
        android:layout_alignParentBottom="true"
        app:cardBackgroundColor="@color/green"
        app:cardElevation="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:fontFamily="@font/vazir_medium"
            android:gravity="center"
            android:text="پرداخت و تکمیل خرید"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>


    </ScrollView>


</RelativeLayout>