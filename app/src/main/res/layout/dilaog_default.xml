<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layoutDirection="rtl"
    app:cardCornerRadius="5dp"
    android:elevation="5dp"
    android:background="@color/gray_light_for_bg_activity"
    android:layout_width="300dp"
    android:layout_height="150dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tv_dialog_title"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            tools:text="هشدار"
            android:fontFamily="@font/vazir_medium"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_below="@id/tv_dialog_title"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dialog_text"
            tools:text="آیا مطمئن هستید؟"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/vazir_medium"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="35dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:background="@color/red"
                android:id="@+id/tv_dialog_negative"
                android:gravity="center_vertical"
                tools:text="لغو"
                android:textAlignment="center"
                android:textSize="@dimen/txt_size_title_activity_show"
                android:textColor="@color/white"
                android:fontFamily="@font/vazir_medium"
                android:focusable="true"
                tools:ignore="UnusedAttribute" />



            <TextView
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="35dp"
                android:id="@+id/tv_dialog_positive"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:background="@color/green"
                android:gravity="center_vertical"
                tools:text="تایید"
                android:textAlignment="center"
                android:textSize="@dimen/txt_size_title_activity_show"
                android:textColor="@color/white"
                android:fontFamily="@font/vazir_medium"
                android:focusable="true"
                tools:targetApi="m"
                tools:ignore="UnusedAttribute" />


        </LinearLayout>



    </RelativeLayout>

</android.support.v7.widget.CardView>