<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ActivityProfile">
    <include layout="@layout/toolbar_second"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_height="match_parent">
        <Button
            android:layout_width="200dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_big"
            android:background="@drawable/shape_btn_edit_profile"
            android:id="@+id/btn_edit_profile"
            android:layout_height="wrap_content"
            android:text="@string/edit_information"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/large_margin"/>
        <Button
            android:layout_width="200dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_big"
            android:background="@drawable/shape_btn_favorite_profile"
            android:id="@+id/btn_favorite_profile"
            android:layout_height="wrap_content"
            android:text="@string/favorite"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/large_margin"/>
        <Button
            android:layout_width="200dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_big"
            android:background="@drawable/shape_btn_exit_profile"
            android:id="@+id/btn_exit_profile"
            android:layout_height="wrap_content"
            android:text="@string/exit_profile"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/large_margin"/>

    </LinearLayout>


</LinearLayout>