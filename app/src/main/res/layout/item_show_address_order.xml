<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_address"
    android:layoutDirection="rtl"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:layout_margin="10dp"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/liner1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#f1eeee"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioButton
                android:id="@+id/rb_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/Tv_name_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="start"
                android:fontFamily="@font/vazir_medium"
                tools:text="مجید دهقان"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/liner2"
            android:layout_below="@+id/liner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Tv_ostan_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:fontFamily="@font/vazir_medium"
                tools:text="استان : خراسان شمالی"/>

            <TextView
                android:id="@+id/Tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:fontFamily="@font/vazir_medium"
                tools:text="شهر : آشخانه"/>

        </LinearLayout>

        <TextView
            android:id="@+id/Tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:padding="8dp"
            android:layout_below="@+id/liner2"
            android:fontFamily="@font/vazir_medium"
            tools:text="بجنورد میدان گارگر"/>



        <TextView
            android:id="@+id/Tv_phone_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_below="@+id/Tv_address"
            android:fontFamily="@font/vazir_medium"
            tools:text="شماره تلفن ثابت : 05824162890"/>


        <TextView
            android:id="@+id/Tv_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_below="@+id/Tv_phone_home"
            android:fontFamily="@font/vazir_medium"
            tools:text="شماره تماس ضروری : 09306246423"/>

        <TextView
            android:id="@+id/Tv_postalcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_below="@+id/Tv_mobile"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/vazir_medium"
            tools:text="کد پستی : 6965874521"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>