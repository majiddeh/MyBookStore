<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/standard_margin"
    app:cardBackgroundColor="@color/bg_for_itemshow"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:layoutDirection="rtl"
    android:id="@+id/card_search"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="@dimen/standard_elevation"
    android:layout_height="200dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="140dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:id="@+id/img_item_search"
            android:layout_gravity="center"
            tools:src="@drawable/side_nav_bar"
            android:scaleType="centerInside"
            android:layout_marginBottom="@dimen/margin_itemshow_product"
            android:layout_weight=".6"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="@dimen/standard_margin"
            android:layout_marginLeft="@dimen/standard_margin"
            android:background="@color/gray_for_littile_view"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/txt_size_title_item_shows"
                android:ellipsize="end"
                android:fontFamily="@font/vazir_medium"
                android:layout_marginTop="@dimen/margin_itemshow_product"
                android:maxLines="1"
                android:id="@+id/txttitle_search"
                android:layout_marginBottom="@dimen/margin_itemshow_product"
                android:layout_marginStart="10dp"
                tools:text="نخل ونارنج"
                android:gravity="center_vertical|start"
                android:layout_height="wrap_content"
                android:layout_weight=".5"/>
            <TextView
                android:layout_width="wrap_content"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/margin_itemshow_product"
                android:textSize="@dimen/txt_size_num_visit"
                android:maxLines="1"
                android:id="@+id/txt_visit_item_search"
                android:fontFamily="@font/vazir_medium"
                android:layout_marginBottom="@dimen/margin_itemshow_product"
                android:layout_marginEnd="@dimen/small_margin"
                tools:text="110"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="@dimen/width_icon_visit"
                android:src="@drawable/ic_visibility_black_24dp"
                android:layout_marginTop="@dimen/margin_itemshow_product"
                android:layout_marginBottom="@dimen/margin_itemshow_product"
                android:layout_marginEnd="10dp"
                android:gravity="center_vertical|start"
                android:layout_height="wrap_content"
                android:layout_weight=".0"/>



        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="@dimen/standard_margin"
            android:layout_marginLeft="@dimen/standard_margin"
            android:background="@color/gray_for_littile_view"/>

