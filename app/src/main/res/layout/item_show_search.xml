<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#dddd"
    android:id="@+id/card_search"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="@dimen/standard_elevation"
    android:layout_height="200dp">

    <LinearLayout
        android:orientation="vertical"
        android:layoutDirection="rtl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="140dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:id="@+id/img_search"
            android:layout_gravity="center"
            tools:src="@drawable/side_nav_bar"
            android:scaleType="centerInside"

            android:layout_weight=".6"/>
        <TextView
            android:textColor="#000"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:id="@+id/txttitle_search"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical|start"
            tools:text="کتاب نخل ونارنج"
            android:layout_height="0dp"
            android:layout_weight=".13"/>
        <TextView
            android:layout_width="match_parent"
            android:textColor="#000"
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/txtprice_search"
            android:layout_marginEnd="10dp"
            tools:text="250000"
            android:gravity="center_vertical|start"
            android:layout_height="0dp"
            android:layout_weight=".13"/>
        <TextView
            android:layout_width="match_parent"
            android:textColor="#000"
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/txtdescription_search"
            android:layout_marginEnd="10dp"
            tools:text="نخل ونارنج نوشته وحید یامین پور در باره شیخ مرتضی انصاری"
            android:gravity="center_vertical|start"
            android:layout_height="0dp"
            android:layout_weight=".13"/>
    </LinearLayout>

</android.support.v7.widget.CardView>