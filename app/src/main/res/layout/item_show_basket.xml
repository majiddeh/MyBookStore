<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    app:cardElevation="8dp"
    android:layout_marginTop="5dp"
    android:background="@color/bg_for_itemshow"
    android:layout_marginBottom="5dp"
    xmlns:tools="http://schemas.android.com/tools"

    android:elevation="@dimen/standard_elevation"
    tools:targetApi="lollipop">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layoutDirection="rtl"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_height="0dp"
            android:layout_weight=".5">
            <ImageView
                android:layout_width="0dp"
                android:id="@+id/imgbasket"
                tools:src="@drawable/banner4"
                android:scaleType="centerInside"
                android:layout_height="match_parent"
                android:layout_weight=".5"/>
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight=".5"
                android:layout_marginStart="@dimen/large_margin"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="@dimen/txt_size_title_item_shows"
                    android:fontFamily="@font/vazir_medium"
                    android:id="@+id/txttitlebasket"
                    android:layout_marginStart="@dimen/standard_margin"
                    android:gravity="center_vertical|start"
                    tools:text="گوشی آیفون"
                    android:layout_height="0dp"
                    android:layout_weight=".3"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/gray_for_littile_view"/>
                <TextView
                    android:layout_width="match_parent"
                    android:textSize="@dimen/txt_size_title_item_shows"
                    android:layout_marginStart="@dimen/standard_margin"
                    android:gravity="center_vertical|start"
                    android:fontFamily="@font/vazir_medium"
                    android:text="@string/number"
                    android:layout_marginTop="5dp"
                    android:layout_height="0dp"
                    android:layout_weight=".2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:textSize="@dimen/txt_size_title_item_shows"
                    android:id="@+id/txtnumberbasket"
                    android:layout_marginStart="8dp"
                    android:gravity="center_vertical|start"
                    tools:text="5 "
                    android:fontFamily="@font/vazir_medium"
                    android:layout_height="0dp"
                    android:layout_weight=".3"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:background="@color/gray_for_littile_view"/>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight=".2">
            <TextView
                android:layout_width="0dp"
                android:gravity="center_vertical|start"
                android:fontFamily="@font/vazir_medium"
                android:textSize="@dimen/txt_size_title_item_shows"
                android:layout_marginStart="@dimen/large_margin"
                android:text="@string/product_price"
                android:layout_height="match_parent"
                android:layout_weight=".5"/>
            <TextView
                android:layout_width="0dp"
                android:gravity="center_vertical|start"
                android:textSize="@dimen/txt_size_title_item_shows"
                android:fontFamily="@font/vazir_medium"
                android:id="@+id/txtpricebasket"
                android:layout_marginStart="5dp"
                android:textColor="#9E0E0E"
                tools:text="2000000"
                android:layout_height="match_parent"
                android:layout_weight=".5"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@color/gray_for_littile_view"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight=".2">
            <TextView
                android:layout_width="0dp"
                android:gravity="center_vertical|start"
                android:text="@string/totallprice"
                android:layout_height="match_parent"
                android:textSize="@dimen/txt_size_title_item_shows"
                android:layout_marginStart="@dimen/large_margin"
                android:fontFamily="@font/vazir_medium"
                android:layout_weight=".5"/>
            <TextView
                android:layout_width="0dp"
                android:gravity="center_vertical|start"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/vazir_medium"
                android:textSize="@dimen/txt_size_title_item_shows"
                android:id="@+id/txtpricetotalbasket"
                android:textColor="#409E0E"
                tools:text="2000000"
                android:layout_height="match_parent"
                android:layout_weight=".5"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@color/gray_for_littile_view"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:id="@+id/txtdeletefrombasket"
            android:text="@string/delete"
            android:fontFamily="@font/vazir_medium"
            android:gravity="center_vertical|end"
            android:layout_marginEnd="8dp"
            android:textSize="@dimen/text_size_small"
            android:paddingBottom="5dp"
            android:textColor="#9E0E0E"/>


    </LinearLayout>



</android.support.v7.widget.CardView>