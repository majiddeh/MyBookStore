<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    app:cardElevation="8dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    xmlns:tools="http://schemas.android.com/tools"

    android:elevation="@dimen/standard_elevation">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layoutDirection="rtl"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_height="0dp"
            android:layout_weight=".5">
            <ImageView
                android:layout_width="0dp"
                android:id="@+id/imgbasket"
                tools:src="@drawable/side_nav_bar"
                android:scaleType="centerInside"
                android:layout_height="match_parent"
                android:layout_weight=".5"/>
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight=".5"
                android:layout_marginStart="@dimen/large_margin"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:textSize="@dimen/text_size_small"
                    android:id="@+id/txttitlebasket"
                    android:layout_marginStart="@dimen/standard_margin"
                    android:gravity="center_vertical|start"
                    tools:text="گوشی آیفون"
                    android:layout_height="0dp"
                    android:layout_weight=".3"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="@dimen/large_margin"
                    android:layout_marginLeft="@dimen/large_margin"
                    android:background="@color/small_lines_background"/>
                <TextView
                    android:layout_width="match_parent"
                    android:textSize="@dimen/text_size_small"
                    android:layout_marginStart="@dimen/standard_margin"
                    android:gravity="center_vertical|start"
                    android:text="@string/numbers"
                    android:layout_marginTop="@dimen/standard_margin"
                    android:layout_height="0dp"
                    android:layout_weight=".2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:textSize="@dimen/text_size_small"
                    android:id="@+id/txtnumberbasket"
                    android:layout_marginStart="@dimen/standard_margin"
                    android:gravity="center_vertical|start"
                    tools:text="5 "
                    android:layout_height="0dp"
                    android:layout_weight=".3"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="@dimen/large_margin"
                    android:layout_marginLeft="@dimen/large_margin"
                    android:background="@color/small_lines_background"/>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight=".2">
            <TextView
                android:layout_width="0dp"
                android:gravity="center_vertical|start"
                android:layout_marginStart="@dimen/large_margin"
                android:text="@string/price"
                android:layout_height="match_parent"
                android:layout_weight=".5"/>
            <TextView
                android:layout_width="0dp"
                android:gravity="center_vertical|start"
                android:id="@+id/txtpricebasket"
                android:layout_marginStart="@dimen/standard_margin"
                android:textColor="@color/red"
                tools:text="2000000"
                android:layout_height="match_parent"
                android:layout_weight=".5"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="@dimen/large_margin"
            android:layout_marginLeft="@dimen/large_margin"
            android:background="@color/small_lines_background"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight=".2">
            <TextView
                android:layout_width="0dp"
                android:gravity="center_vertical|start"
                android:text="@string/totalprice"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/large_margin"
                android:layout_weight=".5"/>
            <TextView
                android:layout_width="0dp"
                android:gravity="center_vertical|start"
                android:layout_marginStart="5dp"
                android:id="@+id/txtpricetotalbasket"
                android:textColor="@color/green"
                tools:text="2000000"
                android:layout_height="match_parent"
                android:layout_weight=".5"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="@dimen/large_margin"
            android:layout_marginLeft="@dimen/large_margin"
            android:background="@color/small_lines_background"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.13"
            android:id="@+id/txtdeletefrombasket"
            android:text="@string/delete"
            android:gravity="center_vertical|end"
            android:layout_marginEnd="@dimen/standard_margin"
            android:textSize="@dimen/text_size_small"
            android:paddingBottom="@dimen/standard_margin"
            android:textColor="@color/red"/>


    </LinearLayout>



</android.support.v7.widget.CardView>